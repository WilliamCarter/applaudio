# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.StaticResources.at(filename="index.html")
GET     /test/*value                        controllers.Application.test(value: String)

# API
GET     /api/librarymanager/*path           controllers.Api.getDirectoryListing(path)
POST    /api/librarymanager/directory       controllers.Api.addDirectory
DELETE  /api/librarymanager/directory       controllers.Api.removeDirectory
POST    /api/librarymanager/upload          controllers.Api.upload
GET     /api/library/*path                  controllers.Api.getMusicFile(path)

# Route everything else to public
GET     /*filename                          controllers.StaticResources.at(filename)
