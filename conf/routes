# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Assets.at(path="/public", file="index.html")
GET     /test/*value                controllers.Application.test(value: String)

# API
GET     /api/library/*path          controllers.Api.getDirectoryListing(path)
POST    /api/library/directory      controllers.Api.addDirectory
DELETE  /api/library/directory      controllers.Api.removeDirectory
POST    /api/library/upload         controllers.Api.upload

# Route everything else to public
GET     /*filename                      controllers.Assets.at(path="/public", filename)
